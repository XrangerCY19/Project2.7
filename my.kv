<Button>:
    font_size: 25
    color: 0.1,0.5,0.6,1
    size_hint: 0.17,0.07
    pos: 660,5


WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:

#Made By XrangerCY19
<MainWindow>:
    name: "main"

    GridLayout:
        cols:1

        Label:
            text: "Advanced Surveillance System"
            font_size: 40
            size_hint: 1,1.5


    Button:
        text: "Enter"
        font_size: 25
        size_hint: 0.17,0.07
        on_release:
            app.root.current = "second" 
            root.manager.transition.direction = "left"


<SecondWindow>:
    name: "second"

    vsrc: vsrc

    GridLayout:

        Label:
            text: "Advanced Surveillance System"
            font_size: 25
            size_hint: 1,1.5
            pos: 350,520

        Label:
            text: "Video Source:"
            color: 0.1,0.5,0.6,1
            font_size: 22
            size_hint: 1,1.5
            pos: 350,300

    Button:
        text: "Execute"
        pos: 330,235
        on_release:
            root.analyze()


    Button:
        text: "Back"
        pos: 5,5
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

    Button:
        text: "Next"
        on_release:
            app.root.current = "third"
            root.manager.transition.direction = "left"



    TextInput:
        id: vsrc
        multiline: False
        size_hint: 0.3, 0.056
        pos: 285,295

#Made By XrangerCY19
<ThirdWindow>:
    name: "third"

    imgloc: imgloc

    GridLayout:

        Label:
            text: "Advanced Surveillance System"
            font_size: 25
            size_hint: 1,1.5
            pos: 350,520

        Label:
            text: "Image Location:"
            color: 0.1,0.5,0.6,1
            font_size: 22
            size_hint: 1,1.5
            pos: 350,300

    Button:
        text: "Execute"
        pos: 330,235
        on_release:
            root.search()

    Button:
        text: "Back"
        pos: 5,5
        size_hint: 0.17,0.07
        on_release:
            app.root.current = "second"
            root.manager.transition.direction = "right"

    TextInput:
        id: imgloc
        multiline: False
        size_hint: 0.3, 0.056
        pos: 285,295

